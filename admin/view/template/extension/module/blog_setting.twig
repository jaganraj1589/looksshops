{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>    
        </div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
	<div class="container-fluid">
		{% if error_warning %}
			<div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
				<button type="button" class="close" data-dismiss="alert">&times;</button>
			</div>
		{% endif %}
	</div>
	<div>
	<div class="container-fluid"> {% if error_warning %}
    <div class="alert alert-danger alert-dismissible"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if success %}
    <div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}


    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ setting_action }}" method="post" id="form-setting" class="form-horizontal">
        
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="setting_status" id="input-status" class="form-control">
                {% if module_blog_setting_status %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>

              <fieldset>
                <legend>Articles</legend>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-admin-limit"><span data-toggle="tooltip" title="{{ help_limit_admin }}">Articles Limit</span></label>
                  <div class="col-sm-10">
                  <select name="no_of_articles" id="input-country" class="form-control">
                    
                    
                    <option value="{{ no_of_articles }}" {% if no_of_articles %} selected=""  {% endif %}>{{ no_of_articles }}</option>

                    <option value="10">10</option>
                    <option value="20" >20</option>
                    <option value="30" >30</option>
                    <option value="40" >40</option>
                    <option value="50" >50</option>
                  </select>
                </div>
                </div>
                <div class="form-group required">
                  <label class="col-sm-2 control-label" for="input-admin-limit"><span data-toggle="tooltip" title="{{ help_limit_admin }}">Latest Articles Limit</span></label>
                  <div class="col-sm-10">
                  <select name="no_of_latest_articles" id="input-country" class="form-control">
                      <option value="{{ no_of_latest_articles }}" {% if no_of_latest_articles %} selected=""  {% endif %}>{{ no_of_latest_articles }}</option>
                    <option value="10" >10</option>
                    <option value="20" >20</option>
                    <option value="30" >30</option>
                    <option value="40" >40</option>
                    <option value="50" >50</option>
                  </select>
                </div>
                </div>
              </fieldset>
              <fieldset>
                <legend>Comments</legend>
                <div class="form-group">
                  <label class="col-sm-2 control-label"><span data-toggle="tooltip" title="{{ help_review }}">Allow Comments Without Approval</span></label>
                  <div class="col-sm-10">
                  <label class="radio-inline"> {% if allow_comments %}

                    <input type="radio" name="allow_comments" value="1" checked="checked" />
                    {{ text_yes }}
                    {% else %}
                    <input type="radio" name="allow_comments" value="1" />
                    {{ text_yes }}
                    {% endif %} </label>
                  <label class="radio-inline"> {% if not allow_comments %}
                    <input type="radio" name="allow_comments" value="0" checked="checked" />
                    {{ text_no }}
                    {% else %}
                    <input type="radio" name="allow_comments" value="0" />
                    {{ text_no }}
                    {% endif %} </label>
                </div>
                </div>
              </fieldset>
            
        </form>
      </div>
    </div>
  </div>
</div>
</div>  
{{ footer }}

  