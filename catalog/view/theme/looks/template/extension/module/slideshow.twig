<section>
  <div id="slider-animation" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ul class="carousel-indicators">
      {% set inc = 0 %} {% for banner in banners %} {% if inc == 0 %}
      <li
        data-target="#slider-animation"
        data-slide-to="{{ inc }}"
        class="active"
      ></li>
      {% else %}
      <li data-target="#slider-animation" data-slide-to="{{ inc }}"></li>
      {% endif %} {% set inc = inc + 1 %} {% endfor %} {#
      <li data-target="#slider-animation" data-slide-to="0" class="active"></li>
      <li data-target="#slider-animation" data-slide-to="1"></li>
      <li data-target="#slider-animation" data-slide-to="2"></li>
      #}
    </ul>
    <!-- The slideshow -->
    <div class="carousel-inner">
      {% set inc = 0 %}
      {% for banner in banners %}
      {% if inc == 0 %}
      <div class="carousel-item active">
        {% else %}
      <div class="carousel-item">
        {% endif %}
        <img src="{{ banner.image }}" alt="{{ banner.title }}" />
        <div class="text-box text-box-adj">
          <h2 class="wow slideInRight" data-wow-duration="2s">
            {{ banner.title }}
          </h2>
        </div>
      </div>
      {% set inc = inc + 1 %} 
      {% endfor %} {#
