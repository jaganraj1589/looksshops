<div>
    <div class="row">      
        <div class="col-sm-12">
            <div id="cms-blog">
                <div>
                    <div class="row">
                        <div class="col-md-12">
                            <!-- if no record -->
                            {{noRecord}}
                            <!-- else -->
                            {% for article in articles %}
                                <div class="blog-item">
                                    <a href="{{article.href}}"><h2 class="blog-title heading_font sans-serif">{{article.title}}</h2></a>
                                    <ul class="list-unstyled">
                                        <li class="mt-3">{{word_by}} <a href="">{{ article.firstname }} {{ article.lastname }}</a></li>
                                        <li>{{article.created_at}}</li>
                                        <li><a>{{ article.countComments }} {{word_comments}}</a></li>
                                    </ul>
                                    <div class="blog-image">
                                        <a href="{{article.href}}">
                                        <img class=" img-responsive" src="{{ article.blog_image }}" title="{{ heading_title }}" alt="{{ heading_title }}" /></a>
                                    </div>
                                    
                                    <div class="blog-excerpt mt-3">{{ article.description|slice(0, 800) ~ '...' }}</div>
                                    <div class="blog-button">
                                        <a href="{{article.href}}" class="btn btn-primary hidden-xs button_continue">{{button_blog_continue}}</a>
                                        <a href="{{get_single_article}}&article_id={{article.article_id}}" class="btn btn-primary visible-xs-block button_continue">{{button_blog_continue}}</a>
                                    </div>
                                    
                                </div>
                            {% endfor %}
                            <div class="row pagination-margin mt-3">
                                <div  class="col-sm-6 text-left">{{ results }}</div>
                                <div class="col-sm-6 text-right">{{ pagination }}</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

